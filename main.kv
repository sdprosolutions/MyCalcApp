Screen:
    BoxLayout:
        orientation: 'vertical'
        spacing: dp(10)
        padding: dp(20)

        MDTextField:
            id: calc_input
            hint_text: "Enter expression"
            font_size: 32
            halign: "right"
            readonly: True

        GridLayout:
            cols: 4
            spacing: dp(10)
            size_hint_y: None
            height: self.minimum_height

            Button:
                text: '7'
                on_press: calc_input.text += self.text
            Button:
                text: '8'
                on_press: calc_input.text += self.text
            Button:
                text: '9'
                on_press: calc_input.text += self.text
            Button:
                text: '/'
                on_press: calc_input.text += self.text

            Button:
                text: '4'
                on_press: calc_input.text += self.text
            Button:
                text: '5'
                on_press: calc_input.text += self.text
            Button:
                text: '6'
                on_press: calc_input.text += self.text
            Button:
                text: '*'
                on_press: calc_input.text += self.text

            Button:
                text: '1'
                on_press: calc_input.text += self.text
            Button:
                text: '2'
                on_press: calc_input.text += self.text
            Button:
                text: '3'
                on_press: calc_input.text += self.text
            Button:
                text: '-'
                on_press: calc_input.text += self.text

            Button:
                text: 'C'
                on_press: calc_input.text = ''
            Button:
                text: '0'
                on_press: calc_input.text += self.text
            Button:
                text: '='
                on_press: app.calculate()
            Button:
                text: '+'
                on_press: calc_input.text += self.text
